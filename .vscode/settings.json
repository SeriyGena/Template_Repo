{
    //================================================================
    // General & UI Settings
    //================================================================
    "workbench.colorTheme": "Atom One Dark",
    "workbench.iconTheme": "material-icon-theme",
    "explorer.confirmDelete": false,
    // "security.workspace.trust.untrustedFiles": "open", should be on global seeting lelev Preference: Open Settings (JSON)
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.venv": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.venv": true
    },


    //================================================================
    // Git & GitHub Copilot Settings
    //================================================================
     "github.copilot.enable": {
        // Enables Copilot for all languages by default.
        "*": true,

        "markdown": true, // Enables Copilot for Markdown files, useful for documentation.
        "json":true, // Enables Copilot for JSON files, which can be helpful for configuration files.
        "yaml": true, // Enables Copilot for YAML files, often used in configuration and deployment scripts.
        "jsonc": true, // Enables Copilot for JSONC files, which are JSON files with comments.

        // Explicitly ensures Copilot is active for Python files.
        // This is technically redundant if "*": true is set, but it's good for clarity.
        "python": true,

        // Disables Copilot suggestions in plain text files, which can be
        // distracting and are generally not useful.
        "plaintext": false
    },
    "git.autofetch": true,
    "git.openRepositoryInParentFolders": "always",
    "github.copilot.nextEditSuggestions.enabled": true,// Enables Copilot's next edit suggestions feature
    "editor.inlineSuggest.edits.showCollapsed": true,// Show inline suggestions in a collapsed state by default
    "editor.inlineSuggest.edits.allowCodeShifting": "always",// Allow inline suggestions to shift code when they are applied
    "editor.inlineSuggest.edits.renderSideBySide": "auto",

    //================================================================
    // Python & Jupyter Settings
    //================================================================
    "python.createEnvironment.trigger": "off",
    "python.testing.pytestArgs": [
        "."
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "jupyter.interactiveWindow.textEditor.executeSelection": true,
    "jupyter.interactiveWindow.creationMode": "perFile",
    "jupyter.askForKernelRestart": false,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "notebook.output.textLineLimit": 100,
    "notebook.lineNumbers": "on",

    //================================================================
    // Language-Specific Settings for Python
    //================================================================
    "python.analysis.languageServerMode":"default",
    "python.analysis.typeCheckingMode": "basic",
    // ... your other settings
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingTypeStubs": "none" // or "warning"
    },

    "[python]": {
        // 1. Set Ruff as the default formatter.
        "editor.defaultFormatter": "charliermarsh.ruff",

        // 2. Enable format-on-save to auto-format Python files with Ruff.
        "editor.formatOnSave": true,

        // 3. Enable auto-fix for all safe linting issues on save (e.g., organize imports).
        // "editor.codeActionsOnSave": {
        //     "source.fixAll.ruff": true
        // },   
    }
}
